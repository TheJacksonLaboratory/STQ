#!/bin/bash --login
#SBATCH -p compute
#SBATCH -q batch
#SBATCH -t 24:00:00
#SBATCH --mem=2G
#SBATCH --ntasks=1

samplesheet=$1
workdir=$2
outdir=$3

cd $SLURM_SUBMIT_DIR

module use --append /projects/omics_share/meta/modules
module load nextflow

nextflow run main.nf \
-w ${workdir} \
-profile slurm,singularity \
-resume \
--input=${samplesheet} \
--stage=${stage} \
--outdir=${outdir}
